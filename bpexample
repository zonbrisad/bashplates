##- Some fun

bpElapsedTime() { ##D Return elapsed time
  #dt=$((etime - stime))
  dt=$SECONDS        # total time elapsed in seconds
  ds=$((dt % 60))    
  dm=$(((dt / 60) % 60))
  dh=$((dt / 3600))
  printf '%02d:%02d:%02d' $dh $dm $ds
}

print_spinner() {

  XX=("|" "/" "-" "\\")
  if [ -n "$SPINNER" ]; then
    SPINNER=$(( SPINNER + 1))
    if [ $SPINNER -gt 3 ]; then
      SPINNER=0
    fi
  else
    SPINNER=0
  fi
  echo " ${XX[$SPINNER]} $1"
  echo -e "$E_RETURN $E_UP"
}


spinner() { ##D Spinner example
  echo "$E_HIDE"
  for i in {1..100}; do
    print_spinner "Processing... $(bpElapsedTime)"
    sleep 0.1
  done
  echo -e "${E_SHOW}"
}

bpWait() { ##I Wait for n seconds
  echo "${E_HIDE}"
  a=0
  tmp=${SECONDS}
  while [ "$a" -lt "$1" ]; do
    a=$(( SECONDS - tmp ))
    print_spinner "Waiting... $a"
    sleep 0.1
  done
  echo -e "${E_SHOW}"
}


wait() { ##D Wait for n seconds
  bpWait "$2"
}

print_bar() {

  echo -n " ["
  for jx in $(seq 1 "${2}"); do
    echo -n "="
  done
  for jx in $(seq 1 $((${1} - ${2}))); do
    echo -n " "
  done
  echo  "] ${2}"   
}

bar() { ##D print a testbar (ANSI)
  bpTextLine "Bar test"
  echo -en "$E_HIDE"
  for i in {1..60}; do
    sleep 0.03
    print_bar 60 $i
    echo -e "$E_RETURN $E_UP"
  done
  echo -e "$E_SHOW"
}

shade() { ##D Shade demo (256 color terminal required)
  echo -en '\033]1 Kalle \007'
  echo
  bpTextLine "B/W shading"
  echo
  echo
  echo -e "$E_RETURN"
  echo -en "$E_HIDE"
  for i in {232..255} {255..232} ; do
    sleep 0.05
    printf "\x1b[38;5;%sm _____ Shading text _____ ${E_END}" "$i"
    echo -e "$E_RETURN"
  done
  echo -e "$E_SHOW"
}


