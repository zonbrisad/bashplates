#
# String contains
# 
# $1 Substring to search
# $2 String to search in
#
bpInString() {

  if [[ "$1" = *"$2"* ]]; then
    echo 1
  else
    echo 0
  fi  
}

inString() { ##D String contains test
  A="Hello world"
  
  if [ "$( bpInString HelloX "$A" )" = "1" ]; then
#  if  $( bpInString "Hello" "$A" ) ; then
    echo "A"
  else
    echo "B"
  fi
  
  bpInString "Hello" "$A"
  bpInString "Kalle" "$A" 
}

arg() { ##A Integer argument test
  bpTextLine "Integer argument"
}

opttest() { ##D Options testing
  echo "$1" "$2" "$3" 
  echo "$*"
  bpTextLine "Option testing"
  while getopts ":a:" opt; do
  echo "$opt"
    case $opt in
      a)
        echo "-a was triggered, Parameter: $OPTARG" >&2
      ;;
      \?)
        echo "Invalid option: -$OPTARG" >&2
        exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      exit 1
    ;;
    esac
  done

}


