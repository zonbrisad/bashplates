	  echo -e "${E_RED}$1${E_END}"
		sleep 0.3
		echo -e "${E_UP}${E_RETURN}"
		echo -e "${E_BR_RED}$1${E_END}"
		sleep 0.3
		echo -e "${E_UP}${E_RETURN}"
#		echo -e "${E_RETURN}"
				
	done
}

