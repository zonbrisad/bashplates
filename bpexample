  bpTextLine "Kalle"
  
  echo -e "\nExample of $E_GREEN bpPrintInfo $E_END"
  bpPrintInfo "Kalle" "desc"
    
  echo -e "\nExample of $E_GREEN bpColorizeFile $E_END"
  F="/use/local/var/log/messages"
  echo -e "The filename $(bpColorizeFile $F) is colorized."

  echo -e "\nExample of $E_GREEN bpColorizeUrl $E_END"
  echo -n " $(bpColorizeUrl https://github.com/zonbrisad/bashplates )"
  echo
}

